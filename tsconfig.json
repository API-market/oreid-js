{
    "compilerOptions": {
      "allowJs": true,
      "alwaysStrict": true,
      "downlevelIteration": true,
      "lib": [
        "es2017",
        "dom"
      ],
      "module": "CommonJS",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "dist",
      "sourceMap": true,
      "target": "es5",
    },
    "exclude": [
      "dist",
      "node_modules"
    ],
    "include": [
      "./src/**/*.js",
      "./src/**/*.ts"
    ]
}