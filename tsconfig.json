{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "*" : ["src/@customTypes/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "dist.browser",
    "node_modules",
    "./src/**/?(*.)test.ts",
    "./src/tests/*.*",
  ],
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts"
  ]
}
