{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "esnext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true, // older
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "*" : ["src/@customTypes/*"],
      "crypto": [
        "node_modules/crypto-js" // use browser version of crypto library
      ]
    },
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "dist.browser",
    "node_modules",
    "./src/**/?(*.)test.ts",
    "./src/tests/*.*",
    "./src/testHelpers",
  ],
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts"
  ]
}
